    link href="../assets/extras/animate.css" rel="stylesheet" type="text/css" /
  body
    = partial "partials/engage/nav"
    = yield

    footer.footer
      .container
        .row
          .col-sm-6.col-md-6
          .col-sm-6.col-md-6
            span#copyright.pull-md-right Â© Design Studio Spring

