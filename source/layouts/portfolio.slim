doctype html
html
  head
    meta[charset="UTF-8"]
    meta[name="author" content="Moebiux"]
    meta[name="copyright" content="Moebiux"]
    meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"
    title
      - if current_page.data.title
        = "#{current_page.data.title} | Moebiux"
      - else
        | Moebiux: Sean Loughman's UX portfolio

    = stylesheet_link_tag "portfolio/shared"
    - if current_page.data.curr_page
      = stylesheet_link_tag "portfolio/#{current_page.data.curr_page}"
  body
    = partial "partials/portfolio_nav"
    div#main role="main"
      = yield

    footer.footer
      span#copyright Â© Moebiux
    = javascript_include_tag "jquery-2.2.0.min"
    = javascript_include_tag "bootstrap-4/bootstrap.min"
